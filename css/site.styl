@import "sanitize"
@import "helpers"
@import "fonts" 

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 76px
$gutter = 28px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 15px
$font-size-medium = 24px
$font-size-logo = 40px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

// TYPOGRAPHY

body
  font-family:'CircularStd-Bold',helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-weight: normal

h2
  font-size: 2em
  font-weight: normal

h3
  font-size: 1.5em
  font-weight: normal

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto


//the 100% widths are just so stylus can compile delete as desired

// SPLASH
#splash 
  width: 100%
  height: 100% 
  position: fixed
  top: 0
  left: 0
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  z-index: 1
  
.splash-margin
  z-index: 2
  position: relative
  background-color: $color-white-soft 

// HEADER

#header
  width: 100%
  padding: $margin-small 0
  background-color: $color-white-soft
  z-index: 5
  &.u-fixed
    padding: ( $margin-small / 2 ) 0
    .site-title
      font-size: $font-size-medium
  
.site-title
  font-size: $font-size-logo
  text-align: center
  
.nav-item
  display: inline-block
  margin: 0 ( $margin-small / 2 ) 0 0 
  
.header-right
  text-align: right
  .nav-item
    margin: 0 0 0 ( $margin-small / 2 )

// POSTS LOOP
#posts
  width: 100%
  
.feed-item-title
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: -1

.feed-item-img
  transition: opacity 100ms
  &:hover
    opacity: .2
  
  
.single-title
  font-size: $font-size-medium

.post
  width: 100%
  
.single-article
  position: relative

#pagination
  width: 100%
  
// PACKERY
.masonry-content
  background-color: $color-white-soft
  width: 100%
  height: 100%
  position: absolute
  top: 0
  
.js-masonry-item
  margin-bottom: $margin-small
  
// SLIDER
.slider-content
  background-color: $color-white-soft
  width: 100%
  height: 100%
  position: absolute
  top: 0 
  opacity: 0
  pointer-events: auto
  
.slider-wrapper
  width: 100%
  position: relative
  
.slider-container
  z-index: 10
  
.slider-item
  width: 100%
  height: 100%
  text-align: center
  
.slider-nav
  position: absolute
  top: 49%
  left: 0
  width: 100%
  z-index: 11
  .slider-next
    float: right
    
.slider-hidden
  pointer-events: none
  

// INFO PAGE
article.page 
  font-size: $font-size-medium
  line-height: $font-leading-basic
    

// FOOTER

#footer
  width: 100%
  min-height: $margin-basic


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
