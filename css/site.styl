@import "sanitize"
@import "helpers"
@import "fonts"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 76px
$gutter = 28px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 5)

$font-size-basic = 15px
$font-size-medium = 24px
$font-size-logo = 36px
$font-leading-basic = 1.35em
$font-leading-heading = 1.25em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

$animation-speed-basic = .3s
$animation-speed-quick = .2s

// TYPOGRAPHY

body
  font-family:'CircularStd-Bold',helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic
  visibility: invisible

h1
  font-weight: normal
  line-height: $font-leading-heading

h2
  font-size: 1.65em
  font-weight: normal
  line-height: $font-leading-heading

h3
  font-size: 1.5em
  font-weight: normal
  line-height: $font-leading-heading

p
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

#main-container
  position: relative

#main-content
  opacity: 1
  transition: opacity $animation-speed-basic*1.5
  &.main-content-hidden
    opacity: 0

// SPLASH

#splash
  width: 100%
  height: 100vh
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  transition: height $animation-speed-quick

#splash-title
  font-size: 10em


// HEADER

#header
  top: 0
  position: absolute
  width: 100%
  padding: ( $margin-small / 2 ) 0
  background-color: $color-white-soft
  z-index: 5

#header
  & .single-title,
  & .header-right,
  nav
    transition: opacity $animation-speed-basic
    opacity: 1

#header.header-hidden
  & .single-title,
  & .header-right,
  nav
    transition: opacity $animation-speed-basic
    opacity: 0

#header-container
  height: ($font-size-logo + 12)
  .row, .col
    height: 100%

.site-title
  font-size: $font-size-logo
  text-align: center

.menu-item
  display: inline-block
  margin: 0 ( $margin-tiny / 2 ) 0 0

.header-right
  text-align: right
  .nav-item
    margin: 0 0 0 ( $margin-small / 2 )


// POSTS LOOP

.feed-item-holder
  position: relative
  display: inline-block

.feed-item-title
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: -1
  visibility: hidden

.no-video-thumb
  display: none

.mobile-or-tablet
  video
    display: none
  .no-video-thumb
    display: block

.feed-item-img, video
  width: 100%
  transition: opacity 100ms
  &:hover
    opacity: .2

.close-x
  font-size: $font-size-medium

.single-title
  font-size: $font-size-medium

.single-article
  position: relative

video
  max-width: 100%
  height: auto


// LOAD MORE POSTS
.loading-more
  display: none
  text-align: center

// SINGLE

#single-vimeo-embed
  margin-bottom: $margin-basic
  opacity: 1
  transition: opacity $animation-speed-basic
  &.vimeo-hidden
    opacity: 0

.masonry-content
  opacity: 1
  transition: opacity $animation-speed-basic

.masonry-hidden
  opacity: 0

  // PACKERY

.js-masonry-item
  margin-bottom: $margin-small

  // SLIDER

.slider-content
  background-color: $color-white-soft
  width: 100%
  height: 100%
  position: absolute
  top: 0
  opacity: 1
  transition: opacity $animation-speed-basic
  pointer-events: auto

.slider-hidden
  opacity: 0

.slider-wrapper
  width: 100%
  position: relative

.slider-container
  z-index: 10

.slider-item
  width: 100%
  height: 100%
  text-align: center
  background-position: center center
  background-repeat: no-repeat
  background-image: url('../img/preloader.gif')

.slider-img
  max-height: 100%
  width: auto

.slider-nav
  position: absolute
  width: 50%
  height: 100%
  top: 0
  z-index: 20
  box-sizing: border-box
  padding: ($gutter / 2)

 .slide-prev
  left: 0

#rotate
  display: inline-block
  transform: rotate(180deg)

.slider-next
  right: 0

.slider-hidden
  pointer-events: none


// INFO PAGE

article.page
  font-size: $font-size-medium
  line-height: $font-leading-basic


// FOOTER

#footer
  width: 100%
  min-height: $margin-basic

// LOADING
#loading
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 99
  display: none
  flex-flow: row nowrap
  justify-content: center
  align-items: center
  animation: 'loading' ($animation-speed-basic * 2) ease infinite

  &.on
    display: flex

@keyframes loading
  0%
    opacity: 0.8
  33%
    opacity: 0.5
  66%
    opacity: 0.8


